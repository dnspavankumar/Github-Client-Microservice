    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "groq-sdk": "^0.37.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "pino": "^8.17.2",
    "pino-http": "^9.0.0",
