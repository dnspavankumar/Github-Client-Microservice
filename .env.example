# Server Configuration
PORT=3000
NODE_ENV=development

# Groq API (Required - Free tier available at https://console.groq.com)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

# Pinecone Vector Database (Required - Free tier at https://www.pinecone.io)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=github-code-search

# Redis Configuration (OPTIONAL - Will use in-memory cache if not configured)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Storage Configuration
CACHE_DIR=./cache
MAX_FILE_SIZE_MB=10
MAX_REPO_SIZE_MB=1000

# Code Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_FILE=100

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# GitHub Token (OPTIONAL - for private repositories)
# Get from: https://github.com/settings/tokens
# Scopes needed: repo (for private repos)
# GITHUB_TOKEN=ghp_your_token_here
