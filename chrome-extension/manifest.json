{
  "manifest_version": 3,
  "name": "GitHub Repo Assistant",
  "version": "1.1.0",
  "description": "AI-powered GitHub repository summarization and Q&A assistant with VS Code-style sidebar",
  "permissions": ["activeTab", "storage", "tabs", "notifications"],
  "host_permissions": ["https://github.com/*", "http://localhost:3000/*", "https://api.github.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "js": ["content.js", "sidebar.js"],
      "css": ["sidebar.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar.css"],
      "matches": ["https://github.com/*"]
    }
  ]
}
