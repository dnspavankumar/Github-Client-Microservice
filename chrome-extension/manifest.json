{
  "manifest_version": 3,
  "name": "GitHub Repo Assistant",
  "version": "1.0.0",
  "description": "AI-powered GitHub repository summarization and Q&A assistant",
  "permissions": ["activeTab", "storage", "tabs", "notifications"],
  "host_permissions": ["https://github.com/*", "http://localhost:3000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
